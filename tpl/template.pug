doctype html
html(lang='en')
	include includes/head.pug
	
body
	.container
		h2.thead-dark.w-100.text-center All Users
		
		nav.m-3
			ul.pagination.justify-content-end#pagination 
				- for( let n = 1; n < pages; n++ )
					li.pugButton.m-1
						a(href= `http://localhost:8080/users/` + n)= n
			
		nav.search.searchField.w-100
			form(
				name='searchForm'
				id='searchForm'
				method='GET'
				action='/search'
			)
				input.searchItem.m-1(
					type='text'
					name='id'
					id='id'
					placeholder='id'
				)
				input.searchItem.m-1(
					type='text'
					name='name'
					id='name'
					placeholder='name'
				)
				input.searchItem.m-1(
					type='text'
					name='email'
					id='email'
					placeholder='email'
				)
				input.searchItem.m-1(
					type='number'
					name='funds'
					id='funds'
					placeholder='funds'
				)
				input.searchItem.m-1(
					type='text'
					name='city'
					id='city'
					placeholder='city'
				)
				input.searchItem.m-1(
					type='tel'
					name='phone'
					id='phone'
					placeholder='phone'
				)
				.searchItem
					button.searchItem.m-1.btn.btn-primary.disabled(
						type='reset'
						name='resetSearch'
						id='resetSearch'
					) Reset
					button.searchItem.m-1.btn.btn-primary.active(
						type='submit'
					
						id='submitSearch'
					) Search
		#root
	
	script.
	ReactDOM.render 
		Nav
		#nav
		
	ReactDOM.render
		.container
			table.table.bg-light
				tr
					th id
					th name
					th email
					th funds
					th city
					th phone
				each user in users
					tr
						td=user.id
						td=user.name
						td=user.email
						td=user.funds
						td=user.city
						td=user.phone 
	#root
